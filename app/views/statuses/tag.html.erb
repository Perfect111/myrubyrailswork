<div class="heading"></div>
<div class="content roundbox">
		<% if @current_user%>
            <%= render :partial => "/home/sidebar", :locals => {:page=>:tag, :user=>@current_user, :topics=>@topics} -%>
		<% else %>
		    <%= render :partial => "/home/loggedOutSidebar", :locals => {:topics=>@topics} -%>
        
		<% end %>

	<div class="statuses">
		<h2>#<%=h @tag.tag%></h2>
		 <%= render :partial => "/home/status", :collection => @tag.statuses, :locals => {:user=>@user} -%>
	</div>
	
	
</div>

